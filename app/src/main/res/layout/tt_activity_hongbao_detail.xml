<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/hongbao_close_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_close"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hongbao_detail"
            />

    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tt_default_image"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/hongbao_sender_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mountain"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="@color/default_black_color"/>
    <TextView
        android:id="@+id/hongbao_contennt_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hongbao_edit_hint"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="@color/default_black_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/hongbao_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="40sp"
            android:textColor="@color/default_black_color"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yuan"
            android:textSize="16sp"
            android:textColor="@color/default_black_color"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/hongbao_steal_out_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hongbao_edit_hint"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:textColor="@color/default_black_color"
        android:background="@android:color/darker_gray"/>
    <ListView
        android:id="@+id/hongbao_detail_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
    <TextView
        android:id="@+id/hongbao_my_record_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hongbao_record"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>

</LinearLayout>